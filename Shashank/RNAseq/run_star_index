mkdir star_index_galgal6
/home/fgao/software/STAR-2.7.0e/source/STAR --runThreadN 64 \
     --runMode genomeGenerate \
     --genomeDir star_index_galgal6/ \
     --genomeFastaFiles /home/fgao/reference_genome/Gallus_gallus/Galgal6/Gallus_gallus.GRCg6a.dna.toplevel.fa \
     --sjdbGTFfile /home/fgao/reference_genome/Gallus_gallus/Galgal6/Gallus_gallus.GRCg6a.95.gtf

